{% extends 'layout/layout.twig' %}

{% block content %}

    {{ form(select_form) }}

<table class="table">
    <thead>
    <tr>
        <th>座號</th>
        <th>學號</th>
        <th>性別</th>
        <th>姓名</th>
    </tr>
    </thead>
    <tbody>
    {% for v in data %}
        <tr>
            <td>{{ v.number }}</td>
            <td>{{ v.stud_no }}</td>
            <td>{{ v.sex }}</td>
            <td>{{ v.name }}</td>

        </tr>
    {% endfor %}
    </tbody>

</table>
{% endblock content %}


{% block inline %}

    <script>
        $(function(){
            $("select[name='class_id']").change(function(){
                $("#semester_form").submit();
            });
        })
    </script>
{% endblock inline %}

